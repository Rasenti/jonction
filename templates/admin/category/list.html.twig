{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <main class="flex">
        {% include 'layout/sidebar.html.twig' %}

        <div class="flex flex-col w-full m-6">
            <div class="flex pb-6 pl-1">
                <a href="{{ path('admin_user_create') }}">
                    <button class="theme-button">Créer un utilisateur</button>
                </a>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full bg-gray-800 text-white rounded-md">
                    <thead>
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold bg-theme-darker">Id</th>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold bg-theme-darker">Email</th>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold bg-theme-darker">Roles</th>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold bg-theme-darker">Éditer</th>
                        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold bg-theme-darker">Supprimer</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for user in users %}
                        <tr class="even:bg-theme-gray-light odd:bg-theme-gray-dark">
                            <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                {{ user.id }}
                            </td>
                            <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                <a href="{{ path('admin_user_show', {'id': user.id}) }}">
                                    {{ user.email }}
                                </a>
                            </td>
                            <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                {% for role in user.roles %}
                                    <p>{{ role is same as 'ROLE_ADMIN' ? 'Administrateur' : 'Utilisateur'}}</p>
                                {% endfor %}
                            </td>
                            <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}">
                                    <img alt="Éditer" class="w-6 h-6" src="{{ asset('uploads/editpen.svg') }}"/>
                                </a>
                            </td>
                            <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                <a href="{{ path('admin_user_delete', {'id': user.id}) }}">
                                    <img alt="Supprimer" class="w-6 h-6" src="{{ asset('uploads/trashbin.svg') }}"/>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="flex pt-4 pl-1">
                    <a href="{{ path('app_admin_dashboard') }}">
                        Retour au tableau de bord
                    </a>
                </div>

            </div>
        </div>
    </main>
{% endblock %}
