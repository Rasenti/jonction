{% extends 'base.html.twig' %}

{% block title %}Admin - Page{% endblock %}

{% block body %}

    <main class="main_sidebar">
        {%  include 'layout/sidebar.html.twig' %}
        <div class="d-flex flex-column w-100">
            <div class="m-4">
                <a href="{{ path('admin_page_create') }}">
                    <button>Créer</button>
                </a>
            </div>

            <div class="m-4 mt-0">
                <table class="table table-bordered">
                    <thead class="table_head">
                        <tr>
                            <th scope="col">Titre de l'Article</th>
                            <th scope="col">Catégorie</th>
                            <th scope="col">Éditer</th>
                            <th scope="col">Supprimer</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for page in pages %}
                        <tr>
                            <td>{{ page.name }}</td>
                            <td>
                                {% for category in page.categories %}
                                    {{ category }}
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('admin_page_edit', {'id': page.id}) }}">
                                    <img alt="Éditer" src="uploads/editpen.svg"/>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('admin_page_delete', {'id': page.id}) }}">
                                    <img alt="Supprimer" src="uploads/trashbin.svg"/>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>

{% endblock %}