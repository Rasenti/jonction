{{ form_start(form) }}
    <div class="form-group flex flex-col">
        <div class="flex justify-center">
            {{ form_label(form.email) }}
        </div>
        <div class="flex justify-center p-2">
            {{ form_widget(form.email, {'attr': {'class': 'input-class'}}) }}
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="form-group flex flex-col">
        <div class="flex justify-center">
            {{ form_label(form.roles) }}
        </div>
        <div class="flex justify-center p-2">
            {{ form_widget(form.roles, {'attr': {'class': 'input-class'}}) }}
            {{ form_errors(form.roles) }}
        </div>
    </div>
    <div class="form-group flex flex-col">
        <div class="flex justify-center">
            {{ form_label(form.plainPassword) }}
        </div>
        <div class="flex justify-center p-2">
            {{ form_widget(form.plainPassword, {'attr': {'class': 'input-class'}}) }}
            {{ form_errors(form.plainPassword) }}
        </div>
    </div>
    <div class="form-group flex flex-col">
        <div class="flex justify-center">
            {{ form_label(form.confirmPassword) }}
        </div>
        <div class="flex justify-center p-2">
            {{ form_widget(form.confirmPassword, {'attr': {'class': 'input-class'}}) }}
            {{ form_errors(form.confirmPassword) }}
        </div>
    </div>
    <div class="flex justify-center m-5">
        <button class="theme-button">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}