{% extends 'base.html.twig' %}

{% block title %}Admin - Utilisateur{% endblock %}

{% block body %}
    <main class="flex">
        {%  include 'layout/sidebar.html.twig' %}
        <div class="flex flex-col w-full m-6">
            <h1 class="mt-3 mb-6 text-center text-xl font-bold">Utilisateur {{ user.email }}</h1>

            <div class="flex flex-col text-center">
                <div class="flex justify-center">
                    <table class="w-1/2 bg-gray-800 text-white rounded-md">
                        <tbody>
                            <tr class="even:bg-theme-gray-light odd:bg-theme-gray-dark">
                                <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                    ID
                                </td>
                                <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                    {{ user.id }}
                                </td>
                            </tr>
                            <tr class="even:bg-theme-gray-light odd:bg-theme-gray-dark">
                                <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                    Email
                                </td>
                                <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                    {{ user.email }}
                                </td>
                            </tr>
                            <tr class="even:bg-theme-gray-light odd:bg-theme-gray-dark">
                                <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                    Roles
                                </td>
                                <td class="px-6 py-1 whitespace-nowrap border-2 border-theme-dark">
                                    {% for role in user.roles %}
                                        <p>{{ role is same as 'ROLE_ADMIN' ? 'Administrateur' : 'Utilisateur'}}</p>
                                    {% endfor %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="flex justify-center m-5">
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">
                        <button class="theme-button">Editer</button>
                    </a>
                </div>

                <div class="flex justify-between m-3">
                    <a class="" href="{{ path('admin_user_list') }}">< Retour Ã  la liste</a>
                    <a class="pl-4" href="{{ path('app_admin_dashboard') }}">< Retour au tableau de bord</a>
                </div>

            </div>
        </div>
    </main>

{% endblock %}